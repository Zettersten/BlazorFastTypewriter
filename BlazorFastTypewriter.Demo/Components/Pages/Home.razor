        <div class="demo-preview">
            <Typewriter @ref="_controlTypewriter"
                        Autostart="false"
                        Speed="70"
                        OnStart="HandleControlStart"
                        OnPause="HandleControlPause"
                        OnResume="HandleControlResume"
                        OnComplete="HandleControlComplete">
