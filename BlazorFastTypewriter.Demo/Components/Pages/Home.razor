                <button @onclick="() => SeekToPosition(0.25)">25%</button>
                <button @onclick="() => SeekToPosition(0.5)">50%</button>
                <button @onclick="() => SeekToPosition(0.75)">75%</button>
                <button @onclick="() => SeekToPosition(1)">100%</button>
